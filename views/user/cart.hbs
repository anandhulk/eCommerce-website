<div class="container">
    <h1 class="my-5">My Cart</h1>

    <!-- Cart items table -->
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.name}}</td>
                <td>${{this.price}}</td>
                <td>1</td>
                <td>${{this.price}}</td>
            </tr>
            {{/each}}
            <tr>
                <td colspan="3" class="text-right">Subtotal</td>
                <td>$22.97</td>
            </tr>
            <tr>
                <td colspan="3" class="text-right">Tax</td>
                <td>$1.38</td>
            </tr>
            <tr>
                <td colspan="3" class="text-right">Total</td>
                <td>$24.35</td>
            </tr>
        </tbody>
    </table>

    <!-- Checkout button -->
    <div class="text-center">
        <button class="btn btn-primary btn-lg">Checkout</button>
    </div>
</div>